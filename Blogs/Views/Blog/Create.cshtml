@using Blogs.Models

@model BlogPostViewModel

@using (Html.BeginForm("Create", "Blog", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
{
    @Html.AntiForgeryToken()

    <div class="container mt-5">
        <h2 class="mb-4">Create Blog Post</h2>

        <div class="mb-3">
            @Html.LabelFor(m => m.BlogPost.Title, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.BlogPost.Title, new { @class = "form-control", placeholder = "Enter title" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.BlogPost.Slug, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.BlogPost.Slug, new { @class = "form-control", placeholder = "slug-title-format" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.BlogPost.PublishedDate, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.BlogPost.PublishedDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.BlogPostContent, "Content", htmlAttributes: new { @class = "form-label" })
            @Html.TextAreaFor(m => m.BlogPostContent, htmlAttributes: new { @class = "form-control", rows = 5, placeholder = "Write your content here..." })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.SelectedAuthorId, "Author", new { @class = "form-label" })
            @Html.DropDownListFor(m => m.SelectedAuthorId, Model.Authors, "-- Select Author --", new { @class = "form-select" })
        </div>


        <div class="mb-3">
            @Html.LabelFor(m => m.SelectedAssetId, "Featured Image", new { @class = "form-label" })
            @Html.DropDownListFor(m => m.SelectedAssetId, Model.Assets, "-- Select an image --", new { @class = "form-select" })
        </div>


        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
}
